void main() => runApp(
  MaterialApp(
    home: Scaffold(
      appBar: AppBar(title: const Text("Custom buttons")),
      body: const Center(
        child: Column(children: [Button(), SizedBox(height: 30), Button()]),
      ),
    ),
  ),
);

class Button extends StatefulWidget {
  const Button({Key? key}) : super(key: key);

  @override
  State<Button> createState() => _SelectionButtonState();
}

class _SelectionButtonState extends State<Button> {
  bool _isSelected = false;

  void _toggle() {
    setState(() {
      _isSelected = !_isSelected;
    });
  }

  // getters added
  Color get background =>
      _isSelected ? const Color(0xFF1E88E5) : const Color(0xFFE8F7FB);
  Color get textColor => _isSelected ? Colors.white : Colors.black87;
  String get label => _isSelected ? 'Selected' : 'Not selected';

  @override
  Widget build(BuildContext context) {
    return SizedBox(
      width: 400,
      height: 100,
      child: ElevatedButton(
        onPressed: _toggle,
        style: ElevatedButton.styleFrom(
          backgroundColor: background,
          elevation: _isSelected ? 6 : 0,
          shape: const StadiumBorder(),
        ),
        child: Center(
          child: Text(label, style: TextStyle(fontSize: 26, color: textColor)),
        ),
      ),
    );
  }
}
